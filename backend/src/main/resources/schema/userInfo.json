{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 10
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 20
    },
    "workPhone": {
      "type": "string",
      "pattern": "^\\d{3}-?\\d{3}-?\\d{2}-?\\d{2}$"
    },
    "mobilePhone": {
      "type": "string",
      "pattern": "^\\d{3}-?\\d{3}-?\\d{2}-?\\d{2}$"
    },
    "email": {
      "type": "string",
      "pattern": "^([\\w\\.\\-]+)@([\\w\\-]+)$"
    }
  }
}
